    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ecmaVersion": 2018,
